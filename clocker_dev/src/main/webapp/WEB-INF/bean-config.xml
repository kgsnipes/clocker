	<!-- config
	<bean id="clockerApplicationContextRefreshedListener" class="com.clocker.config.ClockerAppListener"></bean>
	<bean id="defaultUserAuthenticationBean" class="com.clocker.security.DefaultUserAuthenticationProvider"></bean> -->
